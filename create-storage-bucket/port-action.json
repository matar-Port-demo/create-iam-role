{
  "identifier": "create_gcp_storage_bucket",
  "title": "Create GCP Storage Bucket",
  "description": "Create a new GCP Cloud Storage bucket via Terraform",
  "icon": "GCP",
  "trigger": {
    "type": "self-service",
    "operation": "CREATE",
    "userInputs": {
      "properties": {
        "bucket_name": {
          "type": "string",
          "title": "Bucket Name",
          "description": "The name of the GCP Storage bucket to create"
        },
        "project_id": {
          "type": "string",
          "title": "GCP Project ID",
          "description": "The GCP project ID where the bucket will be created"
        },
        "location": {
          "type": "string",
          "title": "Bucket Location",
          "description": "The location/region for the bucket (e.g., us-central1, us-east1)",
          "default": "us-central1"
        }
      },
      "required": [
        "bucket_name",
        "project_id",
        "location"
      ]
    },
    "actionCardButtonText": "Create Storage Bucket",
    "executeActionButtonText": "Create Storage Bucket"
  },
  "invocationMethod": {
    "type": "GITHUB",
    "org": "matar-Port-demo",
    "repo": "terraform-workflow-in-port",
    "workflow": "create-storage-bucket/.github/workflows/create-storage-bucket.yml",
    "workflowInputs": {
      "bucket_name": "{{ .inputs.bucket_name }}",
      "project_id": "{{ .inputs.project_id }}",
      "location": "{{ .inputs.location }}",
      "port_context": {
        "runId": "{{ .run.id }}"
      }
    },
    "reportWorkflowStatus": true
  },
  "publish": true
}

